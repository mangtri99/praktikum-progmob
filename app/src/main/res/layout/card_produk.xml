<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/designMainColor"
        app:cardCornerRadius="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/image"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:maxWidth="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/android_developer" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Produk = A101"
            android:layout_toEndOf="@id/card1"
            android:textColor="@color/miniTitle"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            tools:ignore="NotSibling" />

        <TextView
            android:layout_below="@id/kode"
            android:id="@+id/ukuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ukuran : 3 x 2m"
            android:textColor="@color/miniDescription"
            android:textSize="15sp"
            android:textStyle="normal"
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_below="@id/ukuran"
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga : Rp.500.000"
            android:textColor="@color/miniDescription"
            android:textSize="15sp"
            android:textStyle="normal"
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_below="@id/harga"
            android:id="@+id/kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori : Pernikahan"
            android:textColor="@color/miniDescription"
            android:textSize="15sp"
            android:textStyle="normal"
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</LinearLayout>